<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título do 1° Tempo -->
    <TextView
        android:id="@+id/title_first_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1° Tempo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <!-- Estatísticas do 1° Tempo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Estatística: Gols -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Bloco de valores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Valor do time da casa -->
                <TextView
                    android:id="@+id/stat_home_value_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:gravity="center" />

                <!-- Nome da categoria -->
                <TextView
                    android:id="@+id/stat_category_name_goals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gols"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <!-- Valor do time visitante -->
                <TextView
                    android:id="@+id/stat_away_value_goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Barra de progresso -->
            <ProgressBar
                android:id="@+id/stat_progress_goals"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Estatística: Escanteios -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Bloco de valores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Valor do time da casa -->
                <TextView
                    android:id="@+id/stat_home_value_corners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp"
                    android:gravity="center" />

                <!-- Nome da categoria -->
                <TextView
                    android:id="@+id/stat_category_name_corners"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Escanteios"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <!-- Valor do time visitante -->
                <TextView
                    android:id="@+id/stat_away_value_corners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Barra de progresso -->
            <ProgressBar
                android:id="@+id/stat_progress_corners"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="40"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Estatística: Cartões Amarelos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Bloco de valores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Valor do time da casa -->
                <TextView
                    android:id="@+id/stat_home_value_amarelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp"
                    android:gravity="center" />

                <!-- Nome da categoria -->
                <TextView
                    android:id="@+id/stat_category_name_amarelos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amarelos"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <!-- Valor do time visitante -->
                <TextView
                    android:id="@+id/stat_away_value_amarelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Barra de progresso -->
            <ProgressBar
                android:id="@+id/stat_progress_amarelo"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="40"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Estatística: Cartões Vermelhos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <!-- Bloco de valores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Valor do time da casa -->
                <TextView
                    android:id="@+id/stat_home_value_vermelho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="14sp"
                    android:gravity="center" />

                <!-- Nome da categoria -->
                <TextView
                    android:id="@+id/stat_category_name_vermelho"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vermelhos"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <!-- Valor do time visitante -->
                <TextView
                    android:id="@+id/stat_away_value_vermelho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Barra de progresso -->
            <ProgressBar
                android:id="@+id/stat_progress_vermelho"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progress="40"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_drawable"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
