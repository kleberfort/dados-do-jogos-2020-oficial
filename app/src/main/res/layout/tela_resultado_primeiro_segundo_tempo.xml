<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/primary_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTituloResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:gravity="center"
        android:text="RESULTADO DO 1째 E 2째TEMPO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1tempoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1째TEMPO(RESULTADO)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv1TempoVitoriaResultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv1TempoVitoria" />

    <TextView
        android:id="@+id/tv1TempoVitoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:text="V"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv1TempoVitoriaResultado"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloResultado" />

    <TextView
        android:id="@+id/tv1TempoVitoriaResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        app:layout_constraintStart_toEndOf="@+id/tv1tempoResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv1TempoVitoria" />

    <TextView
        android:id="@+id/tv1TempoEmpate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:text="E"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv1TempoEmpateResultado"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloResultado" />

    <TextView
        android:id="@+id/tv1TempoDerrota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:text="D"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv1TempoDerrotaResultado"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloResultado" />

    <TextView
        android:id="@+id/tv1TempoEmpateResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        app:layout_constraintStart_toEndOf="@+id/tv1TempoVitoriaResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv1TempoEmpate" />

    <TextView
        android:id="@+id/tv1TempoDerrotaResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        app:layout_constraintStart_toEndOf="@+id/tv1TempoEmpateResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv1TempoDerrota" />

    <TextView
        android:id="@+id/tv2tempoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2째TEMPO(RESULTADO)"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv2TempoVitoriaResultado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv2TempoVitoria" />

    <TextView
        android:id="@+id/tv2TempoVitoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="2dp"
        android:text="V"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv2TempoVitoriaResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv1TempoVitoriaResultado" />

    <TextView
        android:id="@+id/tv2TempoEmpate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="2dp"
        android:text="E"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv2TempoEmpateResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv1TempoEmpateResultado" />

    <TextView
        android:id="@+id/tv2TempoDerrota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="2dp"
        android:text="D"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv2TempoDerrotaResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv1TempoDerrotaResultado" />

    <TextView
        android:id="@+id/tv2TempoVitoriaResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv2tempoResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv2TempoVitoria" />

    <TextView
        android:id="@+id/tv2TempoEmpateResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv2TempoVitoriaResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv2TempoEmpate" />

    <TextView
        android:id="@+id/tv2TempoDerrotaResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_borda_titulo_coluna"
        android:gravity="center"
        android:padding="2dp"
        android:text="99"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv2TempoEmpateResultado"
        app:layout_constraintTop_toBottomOf="@+id/tv2TempoDerrota" />


</androidx.constraintlayout.widget.ConstraintLayout>