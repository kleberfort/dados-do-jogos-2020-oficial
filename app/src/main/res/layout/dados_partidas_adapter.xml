<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:context=".activity.brasilA2022.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvNomeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                tools:text="Descrição do Campeonato" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/tvRodada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="2"
                android:background="@color/primary_500"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                tools:text="Rodada: " />

            <TextView
                android:id="@+id/tvDataJogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/primary_200"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                tools:text="Data do jogo" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_castelao_dois"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/ivTimeCasa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvNomeCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivTimeCasa"
                app:layout_constraintEnd_toStartOf="@+id/tvPlacarCasa"
                app:layout_constraintStart_toEndOf="@+id/ivTimeCasa"
                app:layout_constraintTop_toTopOf="@+id/ivTimeCasa"
                tools:text="nome Casa" />

            <TextView
                android:id="@+id/tvPlacarCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_score"
                android:overScrollMode="never"
                android:padding="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="20dp"

                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/tvNomeCasa"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="99" />

            <ImageView
                android:id="@+id/ivTimeFora"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvNomeFora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivTimeFora"
                app:layout_constraintEnd_toStartOf="@+id/ivTimeFora"
                app:layout_constraintStart_toEndOf="@+id/tvPlacarFora"
                app:layout_constraintTop_toTopOf="@+id/ivTimeFora"
                tools:text="nome Fora" />

            <TextView
                android:id="@+id/tvPlacarFora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_score"
                android:padding="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvNomeFora"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="99" />

            <TextView
                android:id="@+id/tvclassicacaoCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_classification"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintBottom_toTopOf="@+id/tvNomeCasa"
                app:layout_constraintStart_toEndOf="@+id/ivTimeCasa"
                tools:text="11" />

            <TextView
                android:id="@+id/tvClassificacaoFora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_classification"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintBottom_toTopOf="@+id/tvNomeFora"
                app:layout_constraintEnd_toStartOf="@+id/ivTimeFora"
                tools:text="11" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlacarCasa"
                app:layout_constraintEnd_toStartOf="@+id/tvPlacarFora"
                app:layout_constraintStart_toEndOf="@+id/tvPlacarCasa"
                app:layout_constraintTop_toTopOf="@+id/tvPlacarCasa" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_200"
                    android:gravity="center"
                    android:text="Primeiro A marcar Escanteios"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    app:drawableTint="#5F84F3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/secondary_900"
                            android:gravity="center"
                            android:text="3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/secondary_900"
                            android:gravity="center"
                            android:text="5"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/secondary_900"
                            android:gravity="center"
                            android:text="7"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/secondary_900"
                            android:gravity="center"
                            android:text="9"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvCasaEscanteiosTres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />

                        <TextView
                            android:id="@+id/tvCasaEscanteiosCinco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />

                        <TextView
                            android:id="@+id/tvCasaEscanteiosSete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />

                        <TextView
                            android:id="@+id/tvCasaEscanteiosNove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="1dp">

                        <TextView
                            android:id="@+id/tvForaEscanteiosTres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />

                        <TextView
                            android:id="@+id/tvForaEscanteiosCinco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />

                        <TextView
                            android:id="@+id/tvForaEscanteiosSete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />

                        <TextView
                            android:id="@+id/tvForaEscanteiosNove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="2dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            tools:text="NÃO" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_200"
                    android:gravity="center"
                    android:text="Estatística do Jogo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/textView38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@color/primary_200" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:gravity="center"
                            android:text="1° Tempo"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_900"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:gravity="center"
                            android:text="2° Tempo"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_900"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:gravity="center"
                            android:text="Total"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_900"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp">

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:gravity="center"
                            android:text="Escanteios [casa]"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_900"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCasaEscanteiosPrimeiroTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_200"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/tvCasaEscanteiosSegundoTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_200"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/tvCasaEscanteiosTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/secondary_200"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:gravity="center"
                            android:text="Escanteios [fora]"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_900"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvForaEscanteiosPrimeiroTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_200"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/tvForaEscanteiosSegundoTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_200"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/tvForaEscanteiosTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/secondary_200"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="1dp">

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_titulo_coluna"
                            android:gravity="center"
                            android:text="Total"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/secondary_900"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvEscanteiosTotalPrimeiroTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_700"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/tvEscanteiosTotalSegundoTempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_700"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />

                        <TextView
                            android:id="@+id/tvEscanteiosTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/background_borda_linha_coluna"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_700"
                            android:textColor="@color/secondary_900"
                            tools:text="0" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <LinearLayout
