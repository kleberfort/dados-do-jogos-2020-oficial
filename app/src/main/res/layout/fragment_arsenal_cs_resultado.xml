<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jogos.dadosoficialkf228920.fragments.listajogo.europaA2023a24.ingles.resultado.estatistica.arsenal.ArsenalCsResultadoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListaJogos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragmento_estatistica"
                android:name="com.jogos.dadosoficialkf228920.fragments.estatistica.geral.europaA2023a24.ingles.arsenal.ArsenalCasaEstatisticaFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragmento_estatistica_gols"
                android:name="com.jogos.dadosoficialkf228920.fragments.estatistica.local.europaA2023A24.ingles.arsenal.ArsenalCsGolsEstatisticaFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragmento_estatistica_gols_Sofrido"
                android:name="com.jogos.dadosoficialkf228920.fragments.estatistica.local.europaA2023A24.ingles.arsenal.ArsenalCsGolsSofridoEstatisticaFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragmento_estatistica_cantos"
                android:name="com.jogos.dadosoficialkf228920.fragments.estatistica.local.europaA2023A24.ingles.arsenal.ArsenalCsEscanteiosEstatisticaFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


    </LinearLayout>






</ScrollView>